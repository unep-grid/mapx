{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$async": true,

  "title": "Join Config",
  "description": "",
  "type": "object",
  "required": ["version", "id_source", "base", "joins"],
  "properties": {
    "version": {
      "type": "string",
      "default": "1"
    },
    "id_source": {
      "type": "string",
      "mx_validators": [
        {
          "type": "registered_source"
        }
      ]
    },
    "base": {
      "type": "object",
      "required": ["id_source", "columns", "prefix"],
      "mx_validators": [
        {
          "type": "columns_in_table",
          "columns": "columns",
          "table": "id_source",
          "path": "."
        }
      ],
      "properties": {
        "id_source": {
          "type": "string",
          "mx_options": {
            "renderer": "tom-select",
            "maxItems": 1,
            "loader": "source_edit",
            "types": ["vector"]
          }
        },
        "columns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "mx_options": {
            "renderer": "tom-select",
            "maxItems": 30,
            "loader": "source_edit_columns",
            "watch": {
              "property": "id_source",
              "path": "root.base"
            }
          }
        },
        "prefix": {
          "type": "string",
          "default": "_a"
        }
      }
    },
    "joins": {
      "type": "array",
      "items": {
        "type": "object",
        "mx_validators": [
          {
            "type": "columns_in_table",
            "columns": "columns",
            "table": "id_source",
            "path": "."
          },
          {
            "type": "column_in_table",
            "columns": "column_base",
            "table": "id_source",
            "path": "root.base"
          },
          {
            "type": "column_in_table",
            "columns": "column_join",
            "table": "id_source",
            "path": "."
          }
        ],
        "required": [
          "id_source",
          "columns",
          "prefix",
          "type",
          "column_join",
          "column_base"
        ],
        "properties": {
          "id_source": {
            "type": "string",
            "mx_options": {
              "renderer": "tom-select",
              "maxItems": 1,
              "loader": "source_edit",
              "types": ["vector", "tabular", "join"]
            }
          },
          "columns": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "mx_options": {
              "renderer": "tom-select",
              "maxItems": 10,
              "loader": "source_edit_columns",
              "watch": {
                "property": "id_source",
                "path": "."
              }
            }
          },
          "prefix": {
            "type": "string",
            "default": "_b"
          },
          "type": {
            "type": "string",
            "enum": ["INNER", "LEFT", "RIGHT", "FULL"]
          },
          "column_join": {
            "type": "string",
            "mx_options": {
              "renderer": "tom-select",
              "maxItems": 1,
              "loader": "source_edit_columns",
              "watch": {
                "property": "id_source",
                "path": "."
              }
            }
          },
          "column_base": {
            "type": "string",
            "mx_options": {
              "renderer": "tom-select",
              "maxItems": 1,
              "loader": "source_edit_columns",
              "watch": {
                "property": "id_source",
                "path": "root.base"
              }
            }
          }
        }
      }
    }
  }
}
