{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$async": true,

  "title": "Join Config",
  "description": "",
  "type": "object",
  "required": ["version", "id_source", "base", "joins"],
  "properties": {
    "version": {
      "type": "string",
      "default": "1"
    },
    "id_source": {
      "type": "string",
      "id_exists": { "table": "mx_sources", "id_col": "id" }
    },
    "base": {
      "type": "object",
      "properties": {
        "id_source": {
          "type": "string",
          "id_exists": { "table": "mx_sources", "id_col": "id" }
        },
        "columns": {
          "type": "array",
          "items": {
            "type": "string",
            "col_exists_source": {}
          }
        },
        "prefix": {
          "type": "string",
          "default": "_a"
        }
      },
      "required": ["id_source", "columns", "prefix"]
    },
    "joins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id_source": {
            "type": "string",
            "id_exists": { "table": "mx_sources", "id_col": "id" }
          },
          "columns": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "prefix": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["INNER", "LEFT", "RIGHT", "FULL"]
          },
          "column_join": {
            "type": "string"
          },
          "column_base": {
            "type": "string"
          }
        },
        "required": [
          "id_source",
          "columns",
          "prefix",
          "type",
          "column_join",
          "column_base"
        ]
      }
    }
  }
}
