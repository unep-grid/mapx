[
  {
    "id": "soc_link_url",
    "label": "Direct link",
    "template": "{{url}}",
    "disable_encode": true,
    "disable_link_app": true
  },
  {
    "id": "soc_link_mail",
    "label": "Email",
    "template": "mailto:{{emailDest}}?subject={{title}}&body={{text}} %0D {{url}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_iframe",
    "label": "Embed (iframe)",
    "template": "<iframe width='800' height='500' src='{{url}}' frameborder='0' allowfullscreen></iframe>",
    "disable_link": true,
    "disable_encode": true
  },
  {
    "id": "soc_link_twitter",
    "label": "Twitter/X",
    "template": "https://twitter.com/intent/tweet?url={{url}}&text={{title}}&via={{user_id}}&hashtags={{hash_tags}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_bluesky",
    "label": "Bluesky",
    "template": "https://bsky.app/intent/compose?text={{title}} {{url}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_linkedin",
    "label": "LinkedIn",
    "template": "https://www.linkedin.com/sharing/share-offsite/?url={{url}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_facebook",
    "label": "Facebook",
    "template": "https://www.facebook.com/sharer.php?u={{url}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_whatsapp",
    "label": "WhatsApp",
    "template": "https://api.whatsapp.com/send?phone={{phone_number}}&text={{title}}%20{{url}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_reddit",
    "label": "Reddit",
    "template": "https://reddit.com/submit?url={{url}}&title={{title}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_mastodon",
    "label": "Mastodon",
    "template": "https://mastodon.social/share?text={{title}} {{url}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_weibo",
    "label": "Weibo",
    "template": "https://service.weibo.com/share/share.php?url={{url}}&appkey=&title={{title}}&pic=&ralateUid=",
    "disable_copy": true
  },
  {
    "id": "soc_link_tencent_qq",
    "label": "Tencent QQ",
    "template": "https://sns.qzone.qq.com/cgi-bin/qzshare/cgi_qzshare_onekey?url={{url}}&title={{title}}&summary={{text}}",
    "disable_copy": true
  },
  {
    "id": "soc_link_lineme",
    "label": "Line.me",
    "template": "https://lineit.line.me/share/ui?url={{url}}&text={{text}}",
    "disable_copy": true
  }
]
