{
  "$async": true,
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "description": {
      "type": "object",
      "properties": {
        "en": {
          "type": "string"
        }
      },
      "required": ["en"]
    },
    "mode": {
      "type": "string",
      "enum": ["light", "dark"]
    },
    "author": {
      "type": "string"
    },
    "sound": {
      "type": "string",
      "enum": ["switch-on", "switch-off"]
    },
    "colors": {
      "type": "object",
      "patternProperties": {       "^(mx_ui_text|mx_ui_link|mx_ui_input_accent|mx_ui_text_faded|mx_ui_hidden|mx_ui_border|mx_ui_background|mx_ui_background_accent|mx_ui_background_faded|mx_ui_background_contrast|mx_ui_background_transparent|mx_ui_shadow|mx_map_background|mx_map_feature_highlight|mx_map_hillshade_shadow|mx_map_hillshade_highlight|mx_map_mask|mx_map_text_place|mx_map_text_road|mx_map_text_water|mx_map_text_water_outline|mx_map_water|mx_map_bathymetry_high|mx_map_bathymetry_low|mx_map_bathymetry_lines|mx_map_road|mx_map_road_border|mx_map_building|mx_map_boundary_un_1|mx_map_boundary_un_2|mx_map_boundary_un_3|mx_map_boundary_un_4|mx_map_boundary_un_8|mx_map_boundary_un_9|mx_map_boundary_un_6|mx_map_text_land_outline|mx_map_text_bathymetry_outline|mx_map_text_bathymetry|mx_map_text_country_0_0|mx_map_text_country_0_1|mx_map_text_country_0_2|mx_map_text_country_0_3|mx_map_text_country_0_4|mx_map_text_country_0_5|mx_map_text_country_0_99|mx_map_text_country_1_1)$": {
          "type": "object",
          "properties": {
            "visibility": {
              "type": "string",
              "enum": ["visible", "none"]
            },
            "color": {
              "type": "string",
              "pattern": "^rgba?\\((\\d{1,3}),\\s?(\\d{1,3}),\\s?(\\d{1,3})(,\\s?((0(\\.\\d{1,2})?)|(1(\\.0{1,2})?)))?\\)$"
            },
            "font": {
              "type": "string"
            }
          },
          "required": ["visibility", "color"]
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["id", "description", "mode", "author", "sound", "colors"]
}
